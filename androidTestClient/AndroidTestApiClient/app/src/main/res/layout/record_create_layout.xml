<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="id" />

        <EditText
            android:id="@+id/editId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"

            android:inputType="text"
            android:text="id" >

            <requestFocus />
        </EditText>


        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name" />

        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"

            android:inputType="text"
            android:text="name test" >

            <requestFocus />
        </EditText>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="timestamp" />

        <EditText
            android:id="@+id/editTimestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"

            android:inputType="text"
            android:text="timestamp" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="editor" />

        <EditText
            android:id="@+id/editEditor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"

            android:inputType="text"
            android:text="myform.edtr" />
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="field one id" />

        <EditText
            android:id="@+id/editFieldOneId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"

            android:inputType="text"
            android:text="fieldcontain-audio-1" />
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="field one val" />

        <EditText
            android:id="@+id/editFieldOneVal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"

            android:inputType="text"
            android:text="editor name" />
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="field one label" />

        <EditText
            android:id="@+id/editFieldOneLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"

            android:inputType="text"
            android:text="Audio" />


        <!-- poor man's spacer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text=""/>

        <Button
            android:id="@+id/sendRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="submit record" />

    </LinearLayout>

</ScrollView>
